<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <PackageId>GlobalTimeKit</PackageId>
    <Version>1.0.0</Version>
    <Authors>Vinod Kumar</Authors>
    <Company>VinodKumar</Company>
    <Description>A .NET 9 library for DateTime and time zone extension methods.</Description>
    <PackageTags>DateTime, UTC, TimeZone, Extensions, .NET 9</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/monty27github/GlobalTimeKit</RepositoryUrl>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

</Project>
